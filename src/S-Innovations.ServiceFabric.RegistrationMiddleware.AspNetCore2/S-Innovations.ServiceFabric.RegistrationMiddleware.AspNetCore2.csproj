    <Compile Include="..\S-Innovations.ServiceFabric.RegistrationMiddleware.AspNetCore\Services\KestrelHostingService.cs" Link="Services\KestrelHostingService.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.ApplicationInsights.AspNetCore" Version="2.2.1" />
